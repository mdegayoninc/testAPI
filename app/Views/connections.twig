{# empty Twig template #}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    
    <title>Test API</title>
    
    <link rel="stylesheet" 
          href="https://bootswatch.com/yeti/bootstrap.min.css">
    
    <script type="text/javascript" 
            src="https://code.jquery.com/jquery-1.11.3.min.js">
    
    <script type="text/javascript" 
            src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js">
                
    </script>
  </head>
  
  <body>

      <nav class="navbar navbar-default">
          
            <div class="container-fluid">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Wisembly</a>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href=" {{ streamLink}} ">
                            Stream
                        </a>
                    </li>
                    <li>
                        <a href=" {{ connectionsLink }}">
                            Connections
                        </a>
                    </li>
                </ul>
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
    </nav>      
            
    <div class="container">
        
        {% if errorMessage %}    
            <div class="alert alert-danger" role="alert">
                {{ errorMessage }}
            </div>
        {% endif %}
        
        <h1>
            {{ name }}
        </h1>
        <hr>
        <section class="row">
            
            <h2>Connections</h2>
            
            <div class="col-md-12 ">
                
             </div>   
            <div class="row"></div><br />
            
            <div class="col-md-12">
                {% for currentConnection in connections %}

                    <div class="panel panel-default">
                        <div class="panel-body">
                            
                            <strong>Function called :</strong>&nbsp;{{ currentConnection.method|e }}<br />
                            <strong>Date :</strong>&nbsp;{{ currentConnection.date|e }}<br />
                            <strong>User :</strong>&nbsp;{{ currentConnection.user|e }}<br />
                            <strong>Token :</strong>&nbsp;{{ currentConnection.token|e }}<br />
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-info" role="alert">No connections yet</div>
                {% endfor %}
            </div>          
        </section>
            
    </div>
  </body>
</html>
